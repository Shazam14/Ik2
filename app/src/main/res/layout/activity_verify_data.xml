<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE3E3"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".VerifyData">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ikode_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/Theme.AppCompat.Light"
        app:title="Data Information"
        app:titleTextColor="#DBE3E3" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:typeface="sans"
            android:text="Data ID" />

        <EditText
            android:id="@+id/editDataId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:enabled="false"
            android:textColor="#007f7f"
            android:textStyle="bold"
            android:typeface="sans"
             />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_below="@+id/editDataId"
            android:text="Data Type" />

        <EditText
            android:id="@+id/editDataType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#007f7f"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_below="@+id/textView23"
            android:enabled="false"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/textView28"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_below="@+id/editDataType"
             />
        <EditText
            android:id="@+id/editDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="#007f7f"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_below="@+id/textView28"
           />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:typeface="sans"
            android:text="Version"
            android:layout_below="@+id/editDesc"
             />

        <EditText
            android:id="@+id/editVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="#007f7f"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_below="@+id/textView24"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="visible"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.24">

        <Button
            android:id="@+id/settButt"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/saveButt"
            android:background="@drawable/button_sets"
            android:visibility="invisible" />

        <Button
            android:id="@+id/saveButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_save"
            android:visibility="invisible"
            android:layout_gravity="right" />
    </RelativeLayout>

</LinearLayout>
