<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE3E3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ikode.viezara.ikode.SplashActivity"
    tools:showIn="@layout/activity_splash">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout6">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_marginTop="30dp"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_ikodeglobe" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● Initializing the IkodeSC Reader. This may take a few seconds."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp" />

        <com.ikode.viezara.ikode.NumberProgressBar
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            style="@style/NumberProgressBar_Default"
            android:id="@+id/numberbar1"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="28dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="#SayNoToFraud"
        android:typeface="sans"
        android:textStyle="bold|italic"
        android:textSize="64sp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView44"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Remember :"
        android:typeface="sans"
        android:textSize="44sp"
        android:textStyle="bold|italic"
        android:id="@+id/textView49"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/textView44"
        android:layout_alignLeft="@+id/textView48"
        android:layout_alignStart="@+id/textView48" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&quot;if something sounds too good \n to be true, it is most likely is&quot;."
        android:id="@+id/textView48"
        android:textSize="44sp"
        android:textStyle="italic"
        android:layout_below="@+id/textView49"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/iklsplashTxt"
        android:textSize="34sp"
        android:layout_below="@+id/relativeLayout6"
        android:layout_centerHorizontal="true" />


    <!--<ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false" />-->


</RelativeLayout>
