<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Ikode.ActionBar.Solid" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">#007F7F</item>
    </style>

    <style name="DialogWindowTitle.Ikode" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.Ikode.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.Ikode.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Ikode.Medium" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>